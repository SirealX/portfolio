<div id="canvas-container" class="fixed inset-0 -z-20 bg-bgMain overflow-hidden transition-colors duration-500">
  <canvas id="network-canvas"></canvas>
</div>

<script>
  interface NetworkConfig {
    particleRadius: number;
    particleCount: number;
    particleMaxVelocity: number;
    lineMaxDist: number;
    mouseRadius: number;
  }

  // Declare variables at the top of the script scope
  const canvas = document.getElementById('network-canvas') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d') as CanvasRenderingContext2D;
  const mouse = { x: null as number | null, y: null as number | null };
  
  const properties: NetworkConfig = {
    particleRadius: 1.2,
    particleCount: 80,
    particleMaxVelocity: 0.3,
    lineMaxDist: 150,
    mouseRadius: 150,
  };

  // 1. Move the Particle class and functions into scope
  class Particle {
    x: number; y: number; velocityX: number; velocityY: number;

    constructor() {
      this.x = Math.random() * canvas.width;
      this.y = Math.random() * canvas.height;
      this.velocityX = Math.random() * (properties.particleMaxVelocity * 2) - properties.particleMaxVelocity;
      this.velocityY = Math.random() * (properties.particleMaxVelocity * 2) - properties.particleMaxVelocity;
    }

    update() {
      if (this.x > canvas.width || this.x < 0) this.velocityX *= -1;
      if (this.y > canvas.height || this.y < 0) this.velocityY *= -1;
      this.x += this.velocityX;
      this.y += this.velocityY;
    }

    draw(color: string, radius: number) {
      ctx.beginPath();
      ctx.arc(this.x, this.y, radius, 0, Math.PI * 2);
      ctx.fillStyle = color;
      ctx.fill();
    }
  }

  let particles: Particle[] = [];

  // 2. NEW: Visibility Logic for Light Mode
  function getThemeSettings() {
    const isLight = document.documentElement.getAttribute('data-theme') === 'light';
    const accentColor = isLight ? '124, 58, 237' : '6, 182, 212'; 
    
    return {
      particleColor: `rgba(${accentColor}, ${isLight ? '0.7' : '0.5'})`,
      lineColor: `rgba(${accentColor}, ${isLight ? '0.25' : '0.15'})`,
      snapColor: `rgba(${accentColor}, ${isLight ? '0.5' : '0.3'})`,
      radius: isLight ? 1.8 : 1.2,    // Bigger dots for Light Mode
      lineWidth: isLight ? 0.8 : 0.5  // Thicker lines for Light Mode
    };
  }

  // 3. Define the init function BEFORE it is used in listeners
  const init = () => {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
    particles = [];
    for (let i = 0; i < properties.particleCount; i++) {
      particles.push(new Particle());
    }
  };

  function drawLines(settings: any) {
    for (let i = 0; i < particles.length; i++) {
      if (mouse.x !== null && mouse.y !== null) {
        const dx = particles[i].x - mouse.x;
        const dy = particles[i].y - mouse.y;
        const dist = Math.sqrt(dx * dx + dy * dy);
        
        if (dist < properties.mouseRadius) {
          ctx.beginPath();
          ctx.moveTo(particles[i].x, particles[i].y);
          ctx.lineTo(mouse.x, mouse.y);
          ctx.strokeStyle = settings.snapColor;
          ctx.stroke();
        }
      }

      for (let j = i + 1; j < particles.length; j++) {
        const dx = particles[i].x - particles[j].x;
        const dy = particles[i].y - particles[j].y;
        const dist = Math.sqrt(dx * dx + dy * dy);

        if (dist < properties.lineMaxDist) {
          ctx.beginPath();
          ctx.moveTo(particles[i].x, particles[i].y);
          ctx.lineTo(particles[j].x, particles[j].y);
          ctx.strokeStyle = settings.lineColor;
          ctx.lineWidth = settings.lineWidth;
          ctx.stroke();
        }
      }
    }
  }

  function loop() {
    const settings = getThemeSettings();
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    particles.forEach(p => { 
      p.update(); 
      p.draw(settings.particleColor, settings.radius); 
    });
    drawLines(settings);
    requestAnimationFrame(loop);
  }

  // 4. Attach listeners and run
  window.addEventListener('resize', init);
  window.addEventListener('mousemove', (e) => { mouse.x = e.x; mouse.y = e.y; });
  window.addEventListener('mouseleave', () => { mouse.x = null; mouse.y = null; });

  init();
  loop();
</script>