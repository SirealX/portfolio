---

import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<div class="bg-bg-secondary/50 border border-glass-border rounded-4xl p-6 flex items-center gap-5">
  <div class="relative shrink-0">
    <img 
      src="/images/HeroProfile.png" 
      class="w-16 h-16 rounded-2xl object-cover" 
      alt="Cesar Luna"
    />
    <span class="absolute -bottom-1 -right-1 flex h-3 w-3">
      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
      <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
    </span>
  </div>

  <div class="flex flex-col">
    <h1 class="text-3xl font-bold tracking-tight text-txt-primary leading-tight">
      Cesar<br/>Luna
    </h1>
    <p class="text-xs text-txt-secondary font-medium mt-1">
      {t('hero.title')}
    </p>
    <div class="flex items-center gap-2 mt-4 px-2 py-1 bg-glass-fill border border-accent/10 rounded-full w-fit">
    <span class="text-[10px] font-bold text-txt-secondary uppercase tracking-widest">Ibague, CO</span>
  </div>
  </div>
</div>